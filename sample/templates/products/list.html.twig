{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-3">
                <div class="product-card">
                    <img src="{{ product.image }}" alt="Product 1">
                    <div class="card-body">
                        <h5>
                            <a href="/products/item/{{ product.id }}" class="product-link">{{ product.title }}</a>
                        </h5>
                        <p>{{ product.description }}</p>
                        <p><strong>Price: Rs {{ product.price }}</strong></p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

